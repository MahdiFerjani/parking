<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">


    <EditText
        android:id="@+id/editTextprenom"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/input_fields"
        android:ems="10"
        android:hint="identifiant"
        android:inputType="textPersonName"
        android:textColorHint="@color/darkgray"
        app:layout_constraintBottom_toTopOf="@+id/editTextmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextmail"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/input_fields"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColorHint="@color/darkgray"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/input_fields"
        android:ems="10"
        android:hint="mot de passe"
        android:inputType="textPassword"
        android:textColorHint="@color/darkgray"
        app:layout_constraintBottom_toTopOf="@+id/editTextDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sign"
        android:layout_width="154dp"
        android:layout_height="43dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/button"
        android:fontFamily="@font/light"
        android:text="S'inscrire"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tex2" />

    <TextView
        android:id="@+id/tex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="219dp"
        android:fontFamily="@font/bold"
        android:text="S'inscrire!"
        android:textColor="@color/gray"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/returnn"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

    <EditText
        android:id="@+id/editphone"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="386dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/input_fields"
        android:ems="10"
        android:hint="phone"
        android:inputType="number"
        android:textColorHint="@color/darkgray"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="501dp"
        android:layout_marginEnd="211dp"
        android:layout_marginBottom="44dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>